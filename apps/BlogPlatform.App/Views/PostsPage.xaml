<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BlogPlatform.App.PostsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Posts">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="20,10">
            <Label Text="Blog Posts" FontSize="24" FontAttributes="Bold" VerticalOptions="Center" />
            <Button Text="New Post" HorizontalOptions="EndAndExpand" />
        </StackLayout>
        
        <CollectionView Grid.Row="1" ItemsSource="{Binding Posts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15">
                        <Frame BackgroundColor="LightGray" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Summary}" FontSize="14" />
                                <Label Text="{Binding CreatedAt, StringFormat='Posted on {0:MMM dd, yyyy}'}" FontSize="12" TextColor="Gray" />
                            </StackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No posts available yet." FontSize="16" HorizontalOptions="Center" />
                    <Label Text="Create your first post!" FontSize="14" TextColor="Gray" HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
    
</ContentPage>
