<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BlogPlatform.App.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Silver Lemonade">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Image
                x:Name="LogoImg"
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                x:Name="HelloLabel"
                Text="Welcome to Silver Lemonade!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                x:Name="SubtitleLabel"
                Text="Your multi-user blogging platform with Markdown support, image uploads, and tagging."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="ViewPostsBtn"
                Text="View Posts"
                SemanticProperties.Hint="Navigate to posts page"
                Clicked="OnViewPostsClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
