<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BlogPlatform.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BlogPlatform.App"
    Shell.FlyoutBehavior="Flyout"
    Title="Silver Lemonade">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
    <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate local:PostsPage}"
        Route="PostsPage" />
        
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

</Shell>
